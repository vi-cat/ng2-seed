{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./builds/dev/js/",
    "target": "ES5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noLib": false
  },
  "filesGlob": [
    "./src/app/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./src/app/bootstrap.ts",
    "./src/app/components/home/home-component.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
